{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "quotemark": [true, "single", "avoid-escape", "avoid-template"],
    "semicolon": [true, "never"],
    "arrow-parens": [true, "ban-single-arg-parens"],
    "no-console": [true, "warn"]
  },
  "linterOptions": {
    "exclude": [
      "api/node_modules",
      "client/node_modules"
    ]
  },
  "rulesDirectory": []
}
